<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:orientation="vertical"
    tools:context=".AddItemsActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="32dp"
        android:layoutDirection="ltr"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="3.5"
                android:gravity="bottom"
                android:text="Item name"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/itemNameNew_ET"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6.5" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="3.5"
                android:gravity="bottom"
                android:text="Shop name"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/shopNameNew_ET"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6.5" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="3.5"
                android:gravity="bottom"
                android:text="Quantity"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/quantityNew_ET"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6.5" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"

                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="3.5"
                android:gravity="bottom"
                android:text="Details"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/detailsNew_ET"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6.5" />

        </LinearLayout>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:onClick="addToNew"
            android:text="+"
            android:textColor="#FFFFFF" />
    </LinearLayout>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/new_items_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </LinearLayout>

</LinearLayout>


